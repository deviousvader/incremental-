<body>

<h1>Clicker Game</h1>
<div id="stats">
    Coins: <span id="coins">0</span><br>
    Coins per second: <span id="cps">0</span>
</div>

<button onclick="clickCoin()">Click for Coins (+1)</button><br>
<button onclick="buyUpgrade()" id="upgradeBtn">Buy Upgrade (Cost: 10 coins)</button>

<script>
    let coins = 0;
    let coinsPerClick = 1;
    let coinsPerSecond = 0;
    let upgradeCost = 10;

    function clickCoin() {
        coins += coinsPerClick;
        updateDisplay();
    }

    function buyUpgrade() {
        if (coins >= upgradeCost) {
            coins -= upgradeCost;
            coinsPerSecond += 1;
            upgradeCost = Math.floor(upgradeCost * 1.5);
            document.getElementById("upgradeBtn").textContent = `Buy Upgrade (Cost: ${upgradeCost} coins)`;
            updateDisplay();
        }
    }

    function updateDisplay() {
        document.getElementById("coins").textContent = coins;
        document.getElementById("cps").textContent = coinsPerSecond;
        document.getElementById("upgradeBtn").disabled = coins < upgradeCost;
    }

    // Passive income
    setInterval(() => {
        coins += coinsPerSecond;
        updateDisplay();
    }, 1000);

    updateDisplay();
</script>

</body>
</html>
